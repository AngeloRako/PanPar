<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/paniereImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/empty_png"
        android:contentDescription="Immagine del paniere"
        android:layout_gravity="center|start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/paniereContent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/paniereLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginTop="1dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/followPaniere"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/paniereImg"
        app:layout_constraintTop_toBottomOf="@id/paniereContent"
        tools:text="Some Location"
        />

    <TextView
        android:id="@+id/paniereContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Some Content"
        app:layout_constraintEnd_toStartOf="@id/followPaniere"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/paniereImg"
        app:layout_constraintTop_toBottomOf="@+id/paniereLocation"
        app:layout_constraintBottom_toBottomOf="@+id/paniereImg"
        />

    <TextView
        android:id="@+id/paniereValue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom|start"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Some Value"
        app:layout_constraintEnd_toStartOf="@id/followPaniere"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/paniereImg"
        app:layout_constraintTop_toBottomOf="@+id/paniereContent"
        />

    <Button
        android:id="@+id/followPaniere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:text="Segui"
        app:layout_constraintBottom_toBottomOf="@+id/paniereLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/paniereContent"
        app:layout_constraintTop_toBottomOf="@+id/paniereContent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#D3D3D3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/paniereValue"
        app:layout_constraintTop_toBottomOf="@id/paniereValue"
        />

    <!-- android:drawableLeft="@drawable/button_icon" per mettere un'icona vicino-->

</androidx.constraintlayout.widget.ConstraintLayout>